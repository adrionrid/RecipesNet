@page
@model RecipesNet.Areas.Identity.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdentityUser.Id" />
            <div class="form-group">
                <label asp-for="IdentityUser.UserName" class="control-label"></label>
                <input asp-for="IdentityUser.UserName" class="form-control" />
                <span asp-validation-for="IdentityUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentityUser.Email" class="control-label"></label>
                <input asp-for="IdentityUser.Email" class="form-control" />
                <span asp-validation-for="IdentityUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @foreach (var role in Model.Roles)
                {
                    <input type="checkbox" name="roles" value="@role"
                           @(Model.IsInRole(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
                    }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

