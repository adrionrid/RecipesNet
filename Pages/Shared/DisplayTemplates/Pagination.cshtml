@model Pagination

<style>
    .page-link {
        user-select: none
    }
</style>

<div class="pagination d-flex justify-content-between my-3">
    <div class="d-flex">
        <div class="page-item @(!Model.ShowFirst ? "disabled" : "")">
            <a asp-page="./Index" asp-route-pageIndex="1" class="page-link">
                <i class="fas fa-angle-double-left"></i>
            </a>
        </div>

        <div class="page-item @(!Model.ShowPrevious ? "disabled" : "")">
            <a asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex - 1)" class="page-link">
                <i class="fas fa-angle-left"></i>
            </a>
        </div>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <div class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a asp-page="./Index" asp-route-pageIndex="@i" class="page-link">
                    @i
                </a>
            </div>
        }
    </div>
    <div class="d-flex">
        <div class="page-item @(!Model.ShowNext ? "disabled" : "")">
            <a asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex + 1)" class="page-link">
                <i class="fas fa-angle-right"></i>
            </a>
        </div>

        <div class="page-item @(!Model.ShowLast ? "disabled" : "")">
            <a asp-page="./Index" asp-route-pageIndex="@Model.TotalPages" class="page-link">
                <i class="fas fa-angle-double-right"></i>
            </a>
        </div>
    </div>
</div>